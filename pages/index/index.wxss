/**index.wxss**/
.p-index__banner {
  height: 180rpx;
  background: #f63;
  width: 100%;
}

.p-index__search{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  background-color: #ff804d;
  margin: 20rpx 50rpx;
  height: 80rpx;
  padding: 10rpx 10rpx 10rpx 40rpx;
  color: #fff;
}

.p-index__search-input {
  margin: auto 0rpx;
  font-size: 1.1rem;
}

.p-index__search-placeholder {
  color: #f3f3f3;
  opacity: 0.9;
}

.p-index__search-icon-box {
  width: 100rpx;
  height: 100%;
  margin: auto 0rpx;
  font-size: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.p-index__search-icon {
  max-width: 50%;
}

.p-index__type-scroller {
  background: #fff;
  white-space: nowrap;
  box-shadow: 0 2px 3px rgba(0,0,0,.25);
  overflow-x: scroll;
}

.p-index__type-scroller-item {
  display: inline-flex;
  justify-content: center;
  min-width: 100rpx;
  height: 70rpx;
  font-size: 1.1rem;
  padding: 10rpx;
  align-items: center;
}